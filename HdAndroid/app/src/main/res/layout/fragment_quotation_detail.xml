<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.QuotationDetailFragment">


    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView

                    android:layout_width="81dp"
                    android:layout_height="wrap_content"

                    android:text="报价单号" />

                <TextView
                    android:id="@+id/qNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:text="qNumber" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView

                    android:layout_width="81dp"
                    android:layout_height="wrap_content"


                    android:text="报价日期" />

                <TextView
                    android:id="@+id/qDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView

                    android:layout_width="81dp"
                    android:layout_height="wrap_content"

                    android:text="业务员" />

                <TextView
                    android:id="@+id/sal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:text="order_no" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView

                    android:layout_width="81dp"
                    android:layout_height="wrap_content"


                    android:text="有效日期" />

                <TextView
                    android:id="@+id/validDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    />


            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView

                    android:layout_width="81dp"
                    android:layout_height="wrap_content"

                    android:text="币别" />

                <TextView
                    android:id="@+id/moneyType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:text=" " />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView

                    android:layout_width="81dp"
                    android:layout_height="wrap_content"


                    android:text=" " />

                <TextView
                    android:id="@+id/so_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView

                    android:layout_width="81dp"
                    android:layout_height="wrap_content"

                    android:text="客户" />

                <TextView
                    android:id="@+id/cus_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:text="order_no" />

            </LinearLayout>


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:text="备注:" />

            <TextView
                android:id="@+id/memo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"

                />

            <TextView
                android:id="@+id/more_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/memo"
                android:layout_marginLeft="30dp"
                android:text="......" />

            <TextView
                android:id="@+id/showMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/memo"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_white_round_selector"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:text="查看详细" />


            <ImageView
                android:id="@+id/check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:src="@drawable/icon_verify_selector" />


            <ImageView
                android:id="@+id/overdue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:src="@mipmap/overdue" />

        </RelativeLayout>

        <HorizontalScrollView
            android:id="@+id/scrollIndicatorDown"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"

            android:scrollbars="none">

            <com.giants3.hd.android.widget.ExpandableHeightListView
                android:id="@+id/listView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:divider="@drawable/icon_divider"
                android:background="@drawable/background_gray_border"
                android:fillViewport="false"


                android:orientation="vertical" />

        </HorizontalScrollView>


    </LinearLayout>

</ScrollView>