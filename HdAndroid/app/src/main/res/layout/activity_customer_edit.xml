<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="com.giants3.hd.android.activity.CustomerEditActivity">


    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="320dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            style="@style/item_group_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TextView

                style="@style/title_text_style"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="编号" />


            <EditText
                android:id="@+id/code"
                style="@style/value_edit_text_style"
                android:layout_width="0dp"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            style="@style/item_group_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/title_text_style"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="名称" />


            <EditText
                android:id="@+id/name"
                style="@style/value_edit_text_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            style="@style/item_group_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/title_text_style"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="公司" />


            <EditText
                android:id="@+id/company"
                style="@style/value_edit_text_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>


        <LinearLayout
            style="@style/item_group_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                style="@style/title_text_style"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="电话" />


            <EditText
                android:id="@+id/tel"
                style="@style/value_edit_text_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            style="@style/item_group_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                style="@style/title_text_style"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="传真" />


            <EditText
                android:id="@+id/fax"
                style="@style/value_edit_text_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>  <LinearLayout
            style="@style/item_group_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                style="@style/title_text_style"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="邮箱" />


            <EditText
                android:id="@+id/email"
                style="@style/value_edit_text_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>


        <LinearLayout
            style="@style/item_group_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                style="@style/title_text_style"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="地址" />


            <EditText
                android:id="@+id/address"
                style="@style/value_edit_text_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            style="@style/item_group_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                style="@style/title_text_style"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="国家" />


            <EditText
                android:id="@+id/nation"
                style="@style/value_edit_text_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>





        <TextView
            android:id="@+id/save"
            android:layout_width="120dp"
            android:layout_marginTop="30dp"
            android:padding="5dp"
            android:text="保存"
            android:gravity="center"
            android:background="@drawable/button_white_round_selector"
            android:layout_height="wrap_content" />




        <TextView
            android:id="@+id/namecard"
            android:layout_width="120dp"
            android:layout_marginTop="30dp"
            android:padding="5dp"
            android:text="扫描名片"
            android:gravity="center"
            android:background="@drawable/button_white_round_selector"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_namecard"
            android:layout_width="180dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:scaleType="centerInside"
            android:background="#33333333"
            android:layout_height="100dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:id="@+id/last"
                android:layout_marginLeft="20dp"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:text="上次扫描失败的图片"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/lastRequestFailImg"
                    android:layout_width="180dp"
                    android:layout_marginTop="3dp"
                    android:layout_gravity="center"

                    android:scaleType="centerInside"
                    android:background="#33333333"
                    android:layout_height="100dp" />

                <TextView
                    android:id="@+id/retry"
                    android:layout_width="wrap_content"
                    android:text="重新解析"
                    android:layout_marginTop="3dp"
                    android:padding="5dp"
                    android:background="@drawable/button_white_round_selector"
                    android:layout_height="wrap_content" />


            </LinearLayout>

        </LinearLayout>



        <TextView
            android:id="@+id/delete"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_white_round_selector"
            android:gravity="center"
            android:text="删除"
            android:padding="5dp" />

    </LinearLayout>






</ScrollView>
