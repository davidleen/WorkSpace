<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout


            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp"
            tools:context=".fragment.ProductMaterialFragment">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|top"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/item_group_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/title_text_style"
                        android:layout_width="@dimen/title_length"
                        android:text="工序编码" />

                    <TextView
                        android:id="@+id/processCode"
                        style="@style/value_text_style"
                        android:layout_width="@dimen/value_lengthX2" />


                    <TextView
                        android:id="@+id/selectWage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_white_round_selector"
                        android:padding="5dp"
                        android:text="工序选择" />

                </LinearLayout>

                <LinearLayout
                    style="@style/item_group_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/title_text_style"
                        android:layout_width="@dimen/title_length"
                        android:text="工序名称" />

                    <TextView
                        android:id="@+id/processName"

                        style="@style/value_text_style"
                        android:layout_width="@dimen/value_lengthX2" />

                    <TextView
                        android:id="@+id/selectWage2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_white_round_selector"
                        android:padding="5dp"
                        android:text="工序选择" />


                </LinearLayout>


                <LinearLayout
                    style="@style/item_group_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/title_text_style"

                        android:text="工价" />

                    <EditText
                        android:id="@+id/price"
                        style="@style/value_edit_text_style"
                        android:inputType="numberDecimal" />

                </LinearLayout>

                <LinearLayout
                    style="@style/item_group_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/title_text_style"

                        android:text="金额" />

                    <TextView
                        android:id="@+id/amount"
                        style="@style/value_text_style" />

                </LinearLayout>


                <LinearLayout
                    style="@style/item_group_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/title_text_style"

                        android:text="备注" />

                    <EditText
                        android:id="@+id/memo"
                        style="@style/value_edit_text_style"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="left|top"
                        android:minHeight="120dp"


                        />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/goBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:background="@drawable/button_white_round_selector"
            android:padding="10dp"
            android:text="返回" />


        <TextView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:background="@drawable/button_white_round_selector"
            android:padding="10dp"
            android:text="删除" />

    </LinearLayout>


</LinearLayout>
