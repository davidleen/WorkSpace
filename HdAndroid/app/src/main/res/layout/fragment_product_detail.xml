<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.ProductDetailFragment">


    <LinearLayout
        android:id="@+id/control"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="5dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/edit"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_white_round_selector"
            android:gravity="center"
            android:padding="5dp"

            android:text="编辑" />

        <TextView
            android:id="@+id/save"
            android:layout_width="60dp"
            android:layout_height="wrap_content"

            android:background="@drawable/button_white_round_selector"
            android:gravity="center"
            android:padding="5dp"

            android:text="保存" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/icon_divider"
            android:orientation="vertical"
            android:padding="5dp"
            android:showDividers="middle">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/photo"
                    android:layout_width="91dp"
                    android:layout_height="91dp" />

                <com.wefika.flowlayout.FlowLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|top">

                    <LinearLayout
                        style="@style/item_group_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/title_text_style"
                            android:text="名称" />

                        <TextView
                            android:id="@+id/name"

                            style="@style/value_text_style" />

                    </LinearLayout>

                    <LinearLayout
                        style="@style/item_group_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView

                            style="@style/title_text_style"
                            android:text="配方" />

                        <TextView
                            android:id="@+id/pversion"
                            style="@style/value_text_style" />

                    </LinearLayout>

                    <LinearLayout
                        style="@style/item_group_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/title_text_style"
                            android:text="单位" />

                        <TextView
                            android:id="@+id/unit"
                            style="@style/value_text_style" />

                    </LinearLayout>

                    <LinearLayout
                        style="@style/item_group_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView

                            style="@style/title_text_style"
                            android:text="类型" />

                        <TextView
                            android:id="@+id/pClass"
                            style="@style/value_text_style" />

                    </LinearLayout>

                    <LinearLayout
                        style="@style/item_group_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView

                            style="@style/title_text_style"
                            android:text="包装" />

                        <TextView
                            android:id="@+id/pack"
                            style="@style/value_text_style" />

                    </LinearLayout>

                    <LinearLayout
                        style="@style/item_group_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/title_text_style"
                            android:text="净重KG" />

                        <TextView
                            android:id="@+id/weight"
                            style="@style/value_text_style" />

                    </LinearLayout>


                    <LinearLayout
                        style="@style/item_group_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/title_text_style"
                            android:text="厂家" />

                        <TextView
                            android:id="@+id/factory"
                            style="@style/value_text_style" />

                    </LinearLayout>


                </com.wefika.flowlayout.FlowLayout>
            </LinearLayout>

            <com.wefika.flowlayout.FlowLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|top">

                <LinearLayout
                    style="@style/item_group_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/title_text_style"
                        android:layout_width="@dimen/title_long_length"
                        android:text="产品规格Cm" />

                    <TextView
                        android:id="@+id/specCm"
                        style="@style/value_text_style"
                        android:layout_width="@dimen/value_lengthX2" />

                </LinearLayout>

                <LinearLayout
                    style="@style/item_group_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/title_text_style"
                        android:layout_width="@dimen/title_long_length"
                        android:text="包装规格cm" />

                    <TextView
                        android:id="@+id/packSize"

                        style="@style/value_text_style"
                        android:layout_width="@dimen/value_lengthX2" />

                </LinearLayout>
            </com.wefika.flowlayout.FlowLayout>

            <com.wefika.flowlayout.FlowLayout
                android:id="@+id/price_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|top">


                <LinearLayout
                    style="@style/item_group_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/title_text_style"

                        android:text="成本价" />

                    <TextView
                        android:id="@+id/cost"
                        style="@style/value_text_style" />

                </LinearLayout>

                <LinearLayout
                    style="@style/item_group_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/title_text_style"

                        android:text="出厂价" />

                    <TextView
                        android:id="@+id/price"
                        style="@style/value_text_style" />

                </LinearLayout>

                <LinearLayout
                    style="@style/item_group_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/title_text_style"

                        android:text="FOB$" />

                    <TextView
                        android:id="@+id/fob"

                        style="@style/value_text_style"
                        android:layout_width="@dimen/value_lengthX2" />

                </LinearLayout>
            </com.wefika.flowlayout.FlowLayout>


            <com.giants3.hd.android.widget.ExpandableGridView
                android:id="@+id/gridView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </com.giants3.hd.android.widget.ExpandableGridView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="备注" />

                <TextView
                    android:id="@+id/memo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/list_item_bg_selector" />

                <TextView
                    android:id="@+id/showMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:drawableRight="@android:drawable/arrow_down_float"
                    android:text="......(点击查看全部)" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/panel_cost_wage_sum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/list_item_bg_selector"

                        android:gravity="center"
                        android:text="汇总信息" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/list_item_bg_selector"
                        android:gravity="center"
                        android:text="材料成本" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/list_item_bg_selector"
                        android:gravity="center"
                        android:text="工资成本" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/list_item_bg_selector"

                        android:gravity="center"
                        android:text="白胚" />

                    <TextView
                        android:id="@+id/conceptusCost"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:background="@drawable/list_item_bg_selector"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/conceptusWage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/list_item_bg_selector"
                        android:gravity="center" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/list_item_bg_selector"

                        android:gravity="center"
                        android:text="组装" />

                    <TextView
                        android:id="@+id/assembleCost"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/list_item_bg_selector"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/assembleWage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/list_item_bg_selector"
                        android:gravity="center" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/list_item_bg_selector"

                        android:gravity="center"
                        android:text="油漆" />

                    <TextView
                        android:id="@+id/paintCost"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/list_item_bg_selector"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/paintWage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/list_item_bg_selector"
                        android:gravity="center" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/list_item_bg_selector"

                        android:gravity="center"
                        android:text="包装" />

                    <TextView
                        android:id="@+id/packCost"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/list_item_bg_selector"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/packWage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/list_item_bg_selector"
                        android:gravity="center" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="清单" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/icon_divider"
                android:showDividers="beginning|middle|end">

                <TextView
                    android:id="@+id/panel_conceptus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/list_item_bg_selector"

                    android:gravity="center"
                    android:padding="5dp"
                    android:text="白胚" />

                <TextView
                    android:id="@+id/panel_assemble"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/list_item_bg_selector"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="组装" />

                <TextView
                    android:id="@+id/panel_paint"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/list_item_bg_selector"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="油漆" />

                <TextView
                    android:id="@+id/panel_pack"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/list_item_bg_selector"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="包装" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/panel_material_wage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/icon_divider"
                android:showDividers="beginning|middle|end">


                <TextView
                    android:id="@+id/segment_material"
                    android:layout_width="100dp"

                    android:layout_height="wrap_content"
                    android:background="@drawable/list_item_bg_selector"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="材料" />

                <TextView
                    android:id="@+id/segment_wage"
                    android:layout_width="100dp"

                    android:layout_height="wrap_content"
                    android:background="@drawable/list_item_bg_selector"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="工资" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/table_operate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal"
                android:padding="3dp">

                <TextView
                    android:id="@+id/table_add"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_white_round_selector"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="添加" />

                <TextView
                    android:id="@+id/table_modify"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/button_white_round_selector"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="修改" />

                <TextView
                    android:id="@+id/table_delete"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/button_white_round_selector"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="删除" />

            </LinearLayout>

            <HorizontalScrollView
                android:id="@+id/scrollIndicatorDown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:minHeight="200dp"
                android:scrollbars="none">

                <com.giants3.hd.android.widget.ExpandableHeightListView
                    android:id="@+id/product_item_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_gray_border"
                    android:divider="@drawable/icon_divider"
                    android:dividerHeight="1dp"
                    android:fillViewport="false"
                    android:footerDividersEnabled="true"
                    android:headerDividersEnabled="true"
                    android:listSelector="#00000000"
                    android:minHeight="300dp"
                    android:orientation="vertical" />

            </HorizontalScrollView>

        </LinearLayout>


    </ScrollView>


    <FrameLayout
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#88000000">

        <ProgressBar

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_centerInParent="true"

            android:layout_gravity="center"
            android:indeterminate="true" />
    </FrameLayout>
</LinearLayout>