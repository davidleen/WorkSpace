    </servlet>-->

    <servlet-mapping>
        <servlet-name>mvc-dispatcher</servlet-name>
        <url-pattern>/api/*</url-pattern>

    </servlet-mapping>

    <filter>
        <filter-name>HttpWrapperFilter</filter-name>
        <filter-class>com.giants3.hd.server.filter.HttpRequestWrapFilter</filter-class>
    </filter>

