<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.xxx.reader.ReaderView
        android:id="@+id/reader"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <FrameLayout
        android:id="@+id/panel_setting"
        android:touchscreenBlocksFocus="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#883F51B5">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="head" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/panel_setting_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/previous"
                    android:layout_width="wrap_content"
                    android:text="previous"
                    android:layout_height="wrap_content"/>
                <androidx.appcompat.widget.AppCompatSeekBar
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/progress"
                    android:max="100"
                    android:min="0"
                    android:progress="0"
                    android:layout_height="wrap_content"/>
                <Button
                    android:layout_width="wrap_content"
                    android:text="next"
                    android:id="@+id/next"
                    android:layout_height="wrap_content"/>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/font_reduce"
                    android:layout_width="wrap_content"
                    android:text="A-"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:id="@+id/font_size"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/font_add"
                    android:layout_width="wrap_content"
                    android:text="A+"
                    android:layout_height="wrap_content"/>




            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/line_space_reduce"
                    android:layout_width="wrap_content"
                    android:text="A-"
                    android:layout_height="wrap_content"/>


                <TextView
                    android:id="@+id/line_space"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/line_space_add"
                    android:layout_width="wrap_content"
                    android:text="A+"
                    android:layout_height="wrap_content"/>




            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:text="bottom" />


        </LinearLayout>
    </FrameLayout>
</FrameLayout>
